from collections import namedtuple
from datetime import date, time

from enaml.core.api import Conditional, Looper
from enaml.stdlib.fields import IntField, FloatField
from enaml.widgets.api import (CheckBox, ComboBox, DateSelector, Field,
                               Form, Label, PushButton, SpinBox, TimeSelector,
                               Window)
from traits.api import (BaseInstance, Bool, Button, Enum, Event, Float, Int,
                        Range, Str)

TraitDesc = namedtuple('TraitDesc', 'name trait_type ui_label')


def auto_view(model):
    """ Generate a view directly from a `HasTraits` instance.
    """
    return AutoView(model=model)


def auto_window(model):
    """ Generate a window directly from a `HasTraits` instance.
    """
    return AutoWindow(model=model)


def model_traits(model):
    traits = []
    for name in model.class_trait_names():
        trait = model.trait(name)
        if type(trait.trait_type) is Event:
            continue
        ui_label = " ".join(name.split('_')).capitalize()
        traits.append(TraitDesc(name, trait.trait_type, ui_label))
    return traits


enamldef BoolEditor(Conditional): _cond:
    attr loop_item
    condition = isinstance(_cond.loop_item.trait_type, Bool)
    CheckBox:
        checked << getattr(model, _cond.loop_item.name)
        checked :: setattr(model, _cond.loop_item.name, self.checked)


enamldef ButtonEditor(Conditional): _cond:
    attr loop_item
    condition = isinstance(_cond.loop_item.trait_type, Button)
    PushButton:
        text = _cond.loop_item.trait_type.label
        clicked :: setattr(model, _cond.loop_item.name, True)


enamldef DateEditor(Conditional): _cond:
    attr loop_item
    condition = (isinstance(_cond.loop_item.trait_type, BaseInstance) and
                 _cond.loop_item.trait_type.klass is date)
    DateSelector:
        date << getattr(model, _cond.loop_item.name)
        date :: setattr(model, _cond.loop_item.name, self.date)


enamldef EnumEditor(Conditional): _cond:
    attr loop_item
    condition = isinstance(_cond.loop_item.trait_type, Enum)
    ComboBox:
        index << _cond.loop_item.trait_type.values.index(getattr(model,
                                                                 _cond.loop_item.name))
        index ::
            item_value = _cond.loop_item.trait_type.values[self.index]
            setattr(model, _cond.loop_item.name, item_value)
        items = list(_cond.loop_item.trait_type.values)


enamldef FloatEditor(Conditional): _cond:
    attr loop_item
    condition = isinstance(_cond.loop_item.trait_type, Float)
    FloatField:
        value << getattr(model, _cond.loop_item.name)
        value :: setattr(model, _cond.loop_item.name, self.value)


enamldef FloatRangeEditor(Conditional): _cond:
    attr loop_item
    condition = (
        isinstance(_cond.loop_item.trait_type, Range) and
        (isinstance(_cond.loop_item.trait_type._low, float) or
         isinstance(_cond.loop_item.trait_type._high, float))
    )
    FloatField:
        value << getattr(model, _cond.loop_item.name)
        value :: setattr(model, _cond.loop_item.name, self.value)
        minimum = _cond.loop_item.trait_type._low
        maximum = _cond.loop_item.trait_type._high


enamldef IntEditor(Conditional): _cond:
    attr loop_item
    condition = isinstance(_cond.loop_item.trait_type, Int)
    IntField:
        value << getattr(model, _cond.loop_item.name)
        value :: setattr(model, _cond.loop_item.name, self.value)


enamldef IntRangeEditor(Conditional): _cond:
    attr loop_item
    condition = (
        isinstance(_cond.loop_item.trait_type, Range) and 
        isinstance(_cond.loop_item.trait_type._low, int) and
        isinstance(_cond.loop_item.trait_type._high, int)
    )
    SpinBox:
        value << getattr(model, _cond.loop_item.name)
        value :: setattr(model, _cond.loop_item.name, self.value)
        minimum = _cond.loop_item.trait_type._low
        maximum = _cond.loop_item.trait_type._high


enamldef StrEditor(Conditional): _cond:
    attr loop_item
    condition = isinstance(_cond.loop_item.trait_type, Str)
    Field:
        text << getattr(model, _cond.loop_item.name)
        text :: setattr(model, _cond.loop_item.name, self.text)


enamldef TimeEditor(Conditional): _cond:
    attr loop_item
    condition = (isinstance(_cond.loop_item.trait_type, BaseInstance) and
                 _cond.loop_item.trait_type.klass is time)
    TimeSelector:
        time << getattr(model, _cond.loop_item.name)
        time :: setattr(model, _cond.loop_item.name, self.time)


enamldef AutoView(Form): _view:
    attr model

    Looper:
        iterable << model_traits(_view.model)

        # Unconditional
        Label:
            text = loop_item.ui_label

        # Conditional
        BoolEditor:
            loop_item << loop_item
        ButtonEditor:
            loop_item << loop_item
        DateEditor:
            loop_item << loop_item
        EnumEditor:
            loop_item << loop_item
        FloatEditor:
            loop_item << loop_item
        FloatRangeEditor:
            loop_item << loop_item
        IntEditor:
            loop_item << loop_item
        IntRangeEditor:
            loop_item << loop_item
        StrEditor:
            loop_item << loop_item
        TimeEditor:
            loop_item << loop_item


enamldef AutoWindow(Window): auto_win:
    attr model

    title = "Edit Properties"

    AutoView:
        model << auto_win.model
